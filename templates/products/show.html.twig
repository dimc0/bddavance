{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product Details</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>Stock</th>
            <td>{{ product.stock }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Category Id</th>
            <td>{{ product.category ? product.category.id : 'N/A' }}</td>
        </tr>
        <tr>
            <th>Category Name</th>
            <td>{{ product.category ? product.category.name : 'N/A' }}</td>
        </tr>
        {% if product.productsOrders|length > 0 %}
            <tr>
                <th>Orders</th>
                <td>
                    <ul>
                        {% for po in product.productsOrders %}
                            <li>Order #{{ po.order.id }} â€” Quantity: {{ po.quantity }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        {% else %}
            <tr>
                <th>Orders</th>
                <td>No orders for this product.</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_products_index') }}">Back to list</a>
    <a href="{{ path('app_products_edit', {'id': product.id}) }}">Edit</a>

    {{ include('products/_delete_form.html.twig') }}
{% endblock %}
